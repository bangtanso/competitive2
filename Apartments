def find_matching_applicants(n, m, k, applicant_sizes, apartment_sizes):
    applicant_sizes.sort()
    apartment_sizes.sort()
    
    matched_applicants = 0
    i = 0
    j = 0
    
    while i < n and j < m:
        if abs(applicant_sizes[i] - apartment_sizes[j]) <= k:
            matched_applicants += 1
            i += 1
            j += 1
        elif applicant_sizes[i] < apartment_sizes[j]:
            i += 1
        else:
            j += 1
            
    return matched_applicants

n, m, k = map(int, input().split())
applicant_sizes = list(map(int, input().split()))
apartment_sizes = list(map(int, input().split()))

print(find_matching_applicants(n, m, k, applicant_sizes, apartment_sizes))
