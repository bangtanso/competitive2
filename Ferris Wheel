def min_gondolas(n, x, weights):
    weights.sort()
    gondolas = 0
    left = 0
    right = n - 1
    
    while left <= right:
        if weights[left] + weights[right] <= x:
            left += 1
            right -= 1
        else:
            right -= 1
        gondolas += 1
    
    return gondolas
n, x = map(int, input().split())
weights = list(map(int, input().split()))

print(min_gondolas(n, x, weights))
