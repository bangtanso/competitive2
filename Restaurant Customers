def max_customers(n, customer_times):
    events = []
    
    for arrival, leaving in customer_times:
        events.append((arrival, 1)) 
        events.append((leaving, -1)) 
    
    events.sort()
    
    max_customers = 0
    current_customers = 0
    
    for time, event_type in events:
        current_customers += event_type
        max_customers = max(max_customers, current_customers)
    
    return max_customers

n = int(input())
customer_times = [tuple(map(int, input().split())) for _ in range(n)]
print(max_customers(n, customer_times))
